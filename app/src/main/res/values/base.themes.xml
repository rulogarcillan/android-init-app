<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.DayNight" parent="Base.Theme" />

    <style name="Base.Theme" parent="Base.Theme.MaterialThemeBuilder">
        <!--selection controls.-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="android:colorBackground">@color/white_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorError">@color/red_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>
        <!--Fonts-->
        <item name="fontTypeThin">@font/sarabun_thin</item>
        <item name="fontTypeLight">@font/sarabun_light</item>
        <item name="fontTypeRegular">@font/sarabun_regular</item>
        <item name="fontTypeMedium">@font/sarabun_medium</item>
        <item name="fontTypeBold">@font/sarabun_bold</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/textHeadline1</item>
        <item name="textAppearanceHeadline2">@style/textHeadline2</item>
        <item name="textAppearanceHeadline3">@style/textHeadline3</item>
        <item name="textAppearanceHeadline4">@style/textHeadline4</item>
        <item name="textAppearanceHeadline5">@style/textHeadline5</item>
        <item name="textAppearanceHeadline6">@style/textHeadline6</item>
        <item name="textAppearanceSubtitle1">@style/textSubtitle1</item>
        <item name="textAppearanceSubtitle2">@style/textSubtitle2</item>
        <item name="textAppearanceBody1">@style/textBody1</item>
        <item name="textAppearanceBody2">@style/textBody2</item>
        <item name="textAppearanceCaption">@style/textCaption</item>
        <item name="textAppearanceButton">@style/textButton</item>
        <item name="textAppearanceOverline">@style/textOverline</item>

        <item name="android:textViewStyle">@style/textTexView</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent
        </item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--color de status y modo oscuro o claro-->
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <!--color de botonera de navegación inferior, linea, modo oscuro o claro-->
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes
        en la ultima versión del themeBuild no aparece lo comento-->
        <!--
           <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
           <item name="colorAccent">?attr/colorPrimaryVariant</item>
         -->
    </style>


</resources>
